{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist", // Specify the output directory for the compiled JavaScript file
    "strict": false, // Disable strict type checking
    "noEmitOnError": false, // Do not emit JavaScript output if there are any compiler errors
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/main.ts" // Specify the path to your TypeScript file(s)
  ]
}